<%- include('partials/HeaderforquesAns') %>
  <section id="navSec">
    <ul class="d-flex flex-row align-items-center justify-content-around">
      <li>Quora</li>
      <form action="/Searching" method="post">
        <input type="text" name="search" placeholder="Search">
      </form>
      <a href="/profile/<%=properuser%>"><img src="/image/<%=properuser%>" id="profileImg" class="dp"></a>
    </ul>
  </section>

  </section>
  <section id="quesAnsSec">
    <div id="quesAnsDiv">
      <div id="questioner">
        <div class="profile d-flex align-items-center">
          <!-- <a href="/image/<%=user.userId%>"><img src="/image/<%=user.userId%>" alt="" class="dp"></a> -->
          <a href="/image/<%=user.userId%>"><img src="/image/<%=user.userId%>" alt="" class="dp"></a>
          <a href="/profile/<%=user.userId%>" class="text-decoration-none text-dark">
            <h3 class="fw-bolder">
              <%=name%>
            </h3>
          </a>
        </div>
        <h6 class="gettime" name="<%=user.time%>">Date and time...</h6>
        <h2 id="ques" class="fw-bolder">
          <%=user.ques%>
        </h2>
        <%var like=false, dislike=false%>
          <%likedarray.forEach(function(se){%>
            <%if(se==iddd){%>
              <%like=true;%>
                <%}%>
                  <%});%>
                    <%dislikedarray.forEach(function(se){%>
                      <%if(se==iddd){%>
                        <%dislike=true;%>
                          <%}%>
                            <%});%>
                              <div id="quesIcons">
                                <%if(like){%>
                                  <i class="far fa-thumbs-up fs-3 text-primary" id="likeIcon"></i>
                                  <i class="fas fa-thumbs-up fs-3 text-primary" id="clickedLike"></i>
                                  <!-- <img src="../images/like.png" id="<%=iddd%>" alt="<%=iddd%>"
                                    class="quesIcons quesIconslike like clickedIcon"> -->
                                  <%if(dislike){%>
                                    <img src="../images/dislike.png" id="<%=iddd%>" alt="<%iddd%>"
                                      class="quesIcons quesIconsdislike dislike clickedIcon">
                                    <%}else{%>
                                      <img src="../images/dislike.png" id="<%=iddd%>" alt="<%iddd%>"
                                        class="quesIcons quesIconsdislike dislike">
                                      <%}%>
                                        <%}else{%>

                                          <i class="far fa-thumbs-up fs-3 text-primary" id="likeIcon"></i>
                                          <i class="fas fa-thumbs-up fs-3 text-primary" id="clickedLike"></i>

                                          <!-- <img src="../images/like.png" id="<%=iddd%>" alt="<%=iddd%>"
                                            class="quesIcons quesIconslike like"> -->
                                          <%if(dislike){%>
                                            <img src="../images/dislike.png" id="<%=iddd%>" alt="<%iddd%>"
                                              class="quesIcons quesIconsdislike dislike clickedIcon">
                                            <%}else{%>
                                              <img src="../images/dislike.png" id="<%=iddd%>" alt="<%iddd%>"
                                                class="quesIcons quesIconsdislike dislike">
                                              <%}%>
                                                <%}%>
                                                  <img src="../images/comment.png" alt="like" id="allAnswer">
                              </div>
      </div>
      <div class="answerDiv mt-4">
        <div class="col p-3 d-flex align-items-center" id="writerDiv">
          <img src="/image/<%=properuser%>" alt="" class="dp">
          <span id="writer">
            <%=username%>
          </span>
        </div>
        <div class="p-1" id="textDec">
          <button class="btn" id="bold"><i class="fas fa-bold"></i></button>
          <button class="btn" id="italic"><i class="fas fa-italic"></i></button>
        </div>
        <form action="/answer" method="post">
          <input type="hidden" name="question" value="<%=iddd%>">
          <div class="input-group p-2" id="answerBox">
            <textarea name="answer" class="form-control outline-none shadow-none" id="answerBlock"
              placeholder="Write here..."></textarea>
          </div>
          <div class="p-3" id="postbtnDiv">
            <button type="submit" class="postBtn btn btn-primary rounded-pill">Post</button>
          </div>
        </form>
      </div>
      <%user.answer.forEach(function(test){%>
        <%var like=false, dislike=false%>
          <%likedarray.forEach(function(se){%>
            <%if(se==test._id){%>
              <%like=true;%>
                <%}%>
                  <%});%>
                    <%dislikedarray.forEach(function(se){%>
                      <%if(se==test._id){%>
                        <%dislike=true;%>
                          <%}%>
                            <%});%>

                              <div class="answerer">
                                <%if(like){%>
                                  <div class="profile d-flex align-items-center">
                                    <img src="/image/<%=test.postedUser%>" alt="profile photo" class="dp">
                                    <a href="/profile/<%=test.postedUser%>" class="text-decoration-none text-dark">
                                      <h3 class="fw-bolder">
                                        <%=test.FullName%>
                                      </h3>
                                    </a>
                                  </div>
                                  <h6 class="gettime" name="<%=test.time%>">Date and time...</h6>
                                  <p id="ans">
                                    <%=test.ans%>
                                  </p>
                                  <img src="../images/like.png" id="<%=test._id%>" alt="<%=test._id%>"
                                    class=" ansIcons ansIconslike like clickedIcon">
                                  <%if(dislike){%>
                                    <img src="../images/dislike.png" id="<%=test._id%>" alt="<%=test._id%>"
                                      class="ansIcons ansIconsdislike dislike clickedIcon">
                                    <%}else{%>
                                      <img src="../images/dislike.png" id="<%=test._id%>" alt="<%=test._id%>"
                                        class="ansIcons ansIconsdislike dislike">
                                      <%}%>
                                        <hr />
                                        <%}else{%>
                                          <div class="profile d-flex align-items-center">
                                            <a href="/image/<%=test.postedUser%>"><img src="/image/<%=test.postedUser%>"
                                                alt="profile photo" class="dp"></a>
                                            <a href="/profile/<%=test.postedUser%>"
                                              class="text-decoration-none text-dark">
                                              <h3 class="fw-bolder">
                                                <%=test.FullName%>
                                              </h3>
                                            </a>
                                          </div>
                                          <h6 class="gettime" name="<%=test.time%>">Date and time..</h6>
                                          <p id="ans">
                                            <%=test.ans%>
                                          </p>
                                          <img src="../images/like.png" id="<%=test._id%>" alt="<%=test._id%>"
                                            class=" ansIcons ansIconslike like">
                                          <%if(dislike){%>
                                            <img src="../images/dislike.png" id="<%=test._id%>" alt="<%=test._id%>"
                                              class="ansIcons ansIconsdislike dislike clickedIcon">
                                            <%}else{%>
                                              <img src="../images/dislike.png" id="<%=test._id%>" alt="<%=test._id%>"
                                                class="ansIcons ansIconsdislike dislike">
                                              <%}%>
                                                <hr />
                                                <%}%>
                              </div>
                              <%});%>

    </div>
  </section>
  <%- include('partials/FooterforquesAns')%>